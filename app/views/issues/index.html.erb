<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<div class="container">
  <div id="map"></div>
    <% content_for :javascript_includes do %>
    <%= javascript_include_tag "maps_index.js" %>
    <% end %>
</div>

  <% if @issues.any? %>
    <table>
      <thead>
        <tr>
          <th>Pic</th>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @issues.each do |issue| %>
          <tr>
            <td><%= image_tag issue.image.url(:thumb), :class => "issue_thumb_image" %></td>
            <td><%= issue.title %></td>
            <td><%= issue.description %></td>
            <td><%= issue.status %></td>
            <td><%= link_to 'Show', issue %></td>
            <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
            <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else%>
    No issues have been reported
  <% end %>

<br>

<%= link_to 'Report Issue', new_issue_path %>


<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['MAPS_API_KEY']%>&callback=indexMarkers">
</script>
