<!DOCTYPE html>
<html>
  <head>
    <title>FixCity</title>
    <%= csrf_meta_tags %>

    <style>
       #map {
        height: 400px;
        width: 100%;
       }
    </style>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'maps' %>
    <%= javascript_include_tag 'issues.js' %>

  </head>

  <body>
    <% if notice %>
      <div class="notice alert alert-info"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert alert alert-danger"><%= alert %></div>
    <% end %>
    <%= yield %>

    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['MAPS_API_KEY']%>&callback=initMap">
    </script>
  </body>
</html>
